<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.blueeleven.viewdrawdemo.linearlayout.view.CustomLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:gravity="center_vertical"
    app:orientation="vertical">


    <Button
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:layout_marginLeft="10dp"
      android:layout_weight="3"
      android:background="@color/red"
      android:text="3 weight" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_weight="2"
      android:background="@color/purple"
      android:text="2 weight" />


    <Button
      android:layout_width="150dp"
      android:layout_height="match_parent"
      android:layout_gravity="right"
      android:background="@color/blue"
      android:text="80dp height" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginRight="30dp"
      android:background="@color/green"
      android:text="wrap content" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/purple" />-->

  </com.blueeleven.viewdrawdemo.linearlayout.view.CustomLinearLayout>

  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="extra button" />

</LinearLayout>